<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Practice" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/leaf</item>
        <item name="colorPrimaryVariant">@color/leaf</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/melon</item>
        <item name="colorSecondaryVariant">@color/leaf</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Practice.Launcher">
        <item name="android:windowBackground">@color/pale_grey</item>
    </style>

    <style name="TextStyle15" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black_38</item>
    </style>

    <style name="TextStyle12" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="TextStyle8" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="TextStyle7" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle2" parent="@android:style/TextAppearance">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle3" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="SwitchStyle" parent="Theme.Practice">
        <item name="colorControlActivated">@color/leaf</item>
    </style>

</resources>
